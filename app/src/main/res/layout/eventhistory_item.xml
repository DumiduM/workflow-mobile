<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class = "EventsHistoryBinding">
        <variable
            name="eventHistoryViewModel"
            type="com.tecOps.workflow.viewModel.EventHistoryViewModel" />
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        android:background="@color/colorWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardViewTitle"
                android:textSize="12dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@{eventHistoryViewModel.EventTitle}"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardViewBody"
                android:text="@{eventHistoryViewModel.EventDetails}"
                android:textSize="10dp"
                android:maxLines="3"
                android:minLines="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>